<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BookClient"
             x:Class="BookClient.Controls.ExtendedEntry">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <StackLayout>
                <Entry Text="{TemplateBinding Text}"
                       IsPassword="{TemplateBinding IsPassword}"
                       HorizontalTextAlignment="{TemplateBinding HorizontalTextAlignment}" 
                       VerticalOptions="Center"
                       Keyboard="{TemplateBinding Keyboard}"/>
                <Label Text="{TemplateBinding ErrorText}" 
                       HorizontalTextAlignment="{TemplateBinding HorizontalTextAlignment}" 
                       TextColor="DarkRed" 
                       VerticalOptions="End" 
                       VerticalTextAlignment="End" 
                       FontSize="Small" />
            </StackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
